<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    >

    <!-- A CardView that contains a TextView and buttons -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/white_50precent"

        card_view:cardMaxElevation="1dp"
        card_view:cardElevation="1dp"

        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"

        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        >
        <!--

        -->

        <LinearLayout
            android:id="@+id/name_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"

            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <ImageView
                android:id="@+id/topic_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/quiz_pic"

                android:maxWidth="50dp"
                android:maxHeight="50dp"

                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                />

            <TextView
                android:id="@+id/topic_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingTop="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"

                android:text="Topic Name"

                android:textSize="30sp"

                android:layout_marginStart="10dp"
                android:layout_marginBottom="1dp"
                />
            <!-- android:text="Topic Name" -->

            <Button
                android:id="@+id/play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/button_bg_rounded_corners"
                android:text="@string/play"
                android:textColor="@color/text_color_thirdly"


                />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
